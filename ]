      <% end if user_signed_in? %>
    </div>
  </div>

  <% if user_signed_in? %>
    <div id="nav">
      <div class="content">
        <ul>
          <li><%= link_to 'Velkommen', @shop %></li>
          <%= render @shop.categories.top %>
        </ul>
      </div>
    </div>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>

  <%= content_tag :div, id: 'cart' do %>
    <div class="content">
      <table>
        <thead>
          <tr>
