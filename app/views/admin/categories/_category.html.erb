<%= content_tag_for :li, category do %>
  <%= content_tag :span do %>
    <%= link_to admin_shop_category_path(@shop, category), data: { confirm: 'Can only delete category without associations. Are you sure?' }, method: :delete do %>
      X
    <% end %>
  <% end if false %>
  <%= link_to category.name, edit_admin_shop_category_path(@shop, category) %>
  <%= content_tag :ol do %>
    <% category.categories.each do |subcategory| %>
      <%= render subcategory %>
    <% end %>
  <% end unless category.categories.empty? %>
<% end %>
