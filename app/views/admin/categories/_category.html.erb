<%= content_tag_for :li, category do %>
  <%= content_tag :span do %>
    <%= link_to 'X', admin_shop_category_path(@shop, category), class: 'delete', data: { confirm: 'Can only delete category without associations. Are you sure?' }, method: :delete %>
  <% end %>
  <%= link_to edit_admin_shop_category_path(@shop, category) do %>
    <strong><%= category.name %></strong>
    <%= "(#{category.access_groups.collect(&:name).join(', ')})" unless category.access_groups.empty? %>
  <% end %>
  <%= content_tag :ol do %>
    <% category.categories.each do |subcategory| %>
      <%= render subcategory %>
    <% end %>
  <% end unless category.categories.empty? %>
<% end %>
