<%= form_for ['admin', @shop, @category] do |f| %>
  <ol>
    <li>
      <%= f.label :name, class: 'required' %>
      <%= f.text_field :name %>
    </li>
    <li>
      <%= f.label :parent_id, 'Parent' %>
      <%= f.collection_select :parent_id, Category.all, :id, :name, include_blank: true %>
    </li>
  </ol>
  <%= f.submit %>
<% end %>
