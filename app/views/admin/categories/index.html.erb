<ul id="breadcrumbs">
  <li><%= @shop.name %></li>
  <li>Categories</li>
</ul>

<div>
  <%= link_to 'New category', new_admin_shop_category_path(@shop) %>
</div>

<%= content_tag :ol, id: 'categories', data: { 'update-url' => sort_admin_shop_categories_path(@shop) } do %>
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
<% end unless @categories.empty? %>
