<ul id="breadcrumbs">
  <li><%= @shop.name %></li>
  <li>Categories</li>
</ul>

<div>
  <%= link_to 'New category', new_admin_shop_category_path(@shop) %>
</div>

<ol class="categories" data-update-url="<%= sort_admin_shop_categories_path(@shop) %>">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</ol>
