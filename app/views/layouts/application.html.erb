<!DOCTYPE html>
<html>
<head>
  <title>Bazeshop</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= content_tag :div, id: 'notice' do %>
  <%= flash[:notice] %>
<% end if flash[:notice] %>

<%= content_tag :div, id: 'error' do %>
  <%= flash[:error] %>
<% end if flash[:error] %>

<%= yield %>

</body>
</html>
